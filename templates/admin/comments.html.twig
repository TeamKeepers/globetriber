{# admin/comments #}
{% extends 'admin/baseadmin.html.twig' %}

{% block title %} Liste des commentaires {% endblock %}

{% block body %}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Liste des commentaires (WIP)</h4>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>ID</th>
                                <th>Commentaire</th>
                                <th>Nom complet</th>
                                <th>Pseudo</th>
                                <th>Lieu</th>
                                <th>Photo</th>
                            </thead>
                            <tbody>
                                {% for recommendation in recommendations %}
                                <tr>
                                    <td>{{ recommendation.id }}</td>
                                    {#<td>{{ recommendation.user.firstname}}</td>
                                    <td>{{ recommendation.user.username }}</td>
                                    <td>{{ recommendation.place.title }}</td>
                                    <td>{{ recommendation.app.place.image }}</td>#}
                                    <td>{{ recommendation.comment }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}