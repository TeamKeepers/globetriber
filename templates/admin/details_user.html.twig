{# admin/details_user #}
{% extends 'admin/baseadmin.html.twig' %}

{% block title %} Détails de l'utilisateurs {% endblock %}

{% block body %}
    <h1>Détails de l'utilisateur {{ user.firstname }} {{ user.lastname }} </h1>
    {# Définir ce que l'on veut afficher dans les détails du user #}
    
    <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Modifier Profil</h4>
                                </div>
                                <div class="card-body">
                                    <form>
                                        <div class="row">
                                            <div class="col-md-6 px-1">
                                                <div class="form-group">
                                                    <label>Pseudo</label>
                                                    <input type="text" class="form-control" placeholder="Pseudo" value="{{ user.username }}">
                                                </div>
                                            </div>
                                            <div class="col-md-6 pl-1">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Adresse E-mail</label>
                                                    <input type="email" class="form-control" placeholder="Adresse e-mail" value="{{ user.email }}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 pr-1">
                                                <div class="form-group">
                                                    <label>Prénom</label>
                                                    <input type="text" class="form-control" placeholder="Prénom" value="{{ user.firstname }}">
                                                </div>
                                            </div>
                                            <div class="col-md-6 pl-1">
                                                <div class="form-group">
                                                    <label>Nom</label>
                                                    <input type="text" class="form-control" placeholder="Last Name" value="{{ user.lastname }}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Date de naissance</label>
                                                    <input type="text" class="form-control" placeholder="DOB" value="{{ user.birthdate|date("m/d/Y") }}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Description</label>
                                                    <textarea rows="4" cols="80" class="form-control" placeholder="Description du user" value="">{{ user.description }}</textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-info btn-fill pull-right">Mettre à jour le  Profil</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card card-user">
                                <div class="card-image">
                                    <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="..."><!-- METTRE NOTRE POPRE IMAGE PAR DEFAUT -->
                                </div>
                                <div class="card-body">
                                    <div class="author">
                                        <a href="#">
                                            <img class="avatar border-gray" src="{{ asset('uploads/photos_profile/' ~ app.user.photoProfile )}}" alt="user profile pic">
                                            <h5 class="title">User : {{ user.firstname }} {{ user.lastname }}</h5>
                                        </a>
                                        <p class="description">
                                            Pseudo : {{ user.username }}
                                        </p>
                                    </div>
                                    <p class="description text-center">
                                        Description : {{ user.description }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                                    
        <a href="{{ path('list_user') }}">Retour à la liste des utilisateurs</a>
                
    
    
{% endblock %}